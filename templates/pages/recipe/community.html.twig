{% extends 'base.html.twig' %}

{% block title %}SymRecipe - Mes recettes{% endblock %}

{% block body %}
    <div class="container mt-4">

        {% if not recipes.items is same as([])  %}
        <div class="mt-5 mb-4">
            <h2>Recettes de la communauté</h2>
        </div>

        <div class="d-flex flex-wrap justify-content-start">
            {% for recipe in recipes %}
            <div class="card border-primary mb-4 me-4 shadow-sm rounded" style="max-width: 18rem;">
                <div class="card-header">Recette № {{ recipe.id }}</div>
                <div class="card-body">
                  <h4 class="card-title text-primary">{{ recipe.name }}</h4>
                  <p class="card-text">{{ recipe.description|slice(0, 100) ~ '...' }}</p>
                </div>
              </div>
            {% endfor %}
        </div>

        <div class="navigation d-flex justify-content-start mt-4" >
            {{ knp_pagination_render(recipes) }}
        </div>
  
        {% else %}
            <div 
                class="count mt-4 mb-3" style="max-width: 15rem; opacity: .7">
                Il n'y a pas de recettes
            </div>
        {% endif %}
    </div>
{% endblock %}
