{% extends 'base.html.twig' %}

{% block title %}
    SymRecipe - Nouvelle recette
{% endblock %}

{% block body %} 
    <div class="container" style="margin-bottom: 120px">
        <h2 class="my-4">Cr√©ation d'une recette</h2>  
        <div class="row bg-secondary-subtle col-12 px-4 mb-5">
            {{ form_start(form) }}
                
                <div class="row">
                    <div class="form-group col-6">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                        <div class="form-error">
                            {{ form_errors(form.name) }}
                        </div>
                    </div>

                    <div class="form-group col-6">
                        {{ form_label(form.price) }}
                        {{ form_widget(form.price) }}
                        <div class="form-error">
                            {{ form_errors(form.price) }}
                        </div>
                    </div>
                </div>

                <div class="row">

                    <div class="form-group col-6">
                        {{ form_label(form.time) }}
                        {{ form_widget(form.time) }}
                        <div class="form-error">
                            {{ form_errors(form.time) }}
                        </div>
                    </div>
            
                    <div class="form-group col-6">
                        {{ form_label(form.nbPeople) }}
                        {{ form_widget(form.nbPeople) }}
                        <div class="form-error">
                            {{ form_errors(form.nbPeople) }}
                        </div>
                    </div>

                </div>
                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                    <div class="form-error">
                        {{ form_errors(form.description) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.difficulty) }}
                    {{ form_widget(form.difficulty) }}
                    <div class="form-error">
                        {{ form_errors(form.difficulty) }}
                    </div>
                </div>

                <div class="form-check mt-4">
                    {{ form_widget(form.isFavorite) }}
                    {{ form_label(form.isFavorite) }}
                </div>

                {{ form_label(form.ingredients) }}
                <br>
                <div id="ingredients-wrapper">
                    {% for field in form.ingredients %}
                        <div style="min-width: 10%;">
                            {{ form_widget(field) }}
                            {{ form_label(field) }}
                        </div>
                    {% endfor %}
                </div>

                <div class="form-image col-6">
                    {{ form_row(form.imageFile) }}
                </div>

                <div class="col-6">
                    {{ form_row(form.submit) }}
                </div>           
            {{ form_end(form) }}
        </div> 
    </div>
{% endblock %}
