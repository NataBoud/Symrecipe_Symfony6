{% extends 'base.html.twig' %}

{% block title %}Symrecipe - Modification du mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="my-4">Modification de mot de passe</h2>

    {# read and display just one flash message type #}
        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning mt-4" style="max-width: 40rem;">
                {{ message }}
            </div>
        {% endfor %}


        <div class="row bg-secondary-subtle col-8 px-4 mb-5 " style="margin-bottom: 80px">
            {{ form_start(form) }}  
                <div class="row">
                    <div class="form-group">
                        {{ form_row(form.plainPassword) }}
                        <div class="form-error">
                            {{ form_errors(form.plainPassword) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_row(form.newPassword) }}
                        <div class="form-error">
                            {{ form_errors(form.newPassword) }}
                        </div>
                    </div>
                </div>
            {{ form_end(form) }}
        </div> 
    </div>

{% endblock %}

